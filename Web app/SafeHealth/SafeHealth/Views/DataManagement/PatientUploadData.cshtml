@{
    Layout = "~/Views/Shared/_LayoutPatient.cshtml";
}
@{
    ViewData["Title"] = "Upload Data";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="~/css/logout.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="~/js/logout.js"></script>
</head>

<body>
    <h2 style="text-align: center;">File Upload Page</h2>


    <form id="uploadForm" action="/DataManagement/UploadDocument" method="post" enctype="multipart/form-data" onsubmit="return validateForm()" style="text-align: center;">
        <div id="fileContainer" style="display: inline-block; text-align: left;">
            <input type="text" id="fileNameTextbox" name="documentTitle" readonly style="width: 200px;"> <!-- Adjust the width as needed -->
            <label for="fileInput">
                <input type="file" id="fileInput" name="document" style="display: none" accept=".pdf, .png">
                <button id="searchButton" type="button" onclick="openFileExplorer()" class="btn btn-primary btn-lg">Search</button>
            </label>
        </div>
        <br> <!-- Add a line break for better spacing -->
        <button id="uploadButton" type="submit" class="btn btn-primary btn-lg">Upload</button>
    </form>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function openFileExplorer() {
            document.getElementById('fileInput').click();
        }

        document.getElementById('fileInput').addEventListener('change', function () {
            var selectedFile = this.files[0];

            // Display the file name in the textbox
            document.getElementById('fileNameTextbox').value = selectedFile ? selectedFile.name : '';
        });

        function validateForm() {
            var selectedFile = document.getElementById('fileInput').files[0];
            if (!selectedFile) {
                alert('Please select a file.');
                return false;
            }
            // You can perform additional validation if needed.
            return true;
        }
    </script>
</body>

</html>
